<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/watch_item_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.hgsil.android.budejie2.View.CircleImageView
            android:id="@+id/watch_item_avatar"
            android:layout_margin="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/watch_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_toRightOf="@id/watch_item_avatar"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="#0f88eb"
            />

        <TextView
            android:id="@+id/watch_item_title"
            android:layout_below="@id/watch_item_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:layout_below="@id/watch_item_title"
        android:id="@+id/watch_item_watchTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>



    </RelativeLayout>


</RelativeLayout>